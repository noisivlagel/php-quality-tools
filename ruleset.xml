<?xml version="1.0"?>
<ruleset name="noisivlagel coding standard" namespace="noisivlagel/quality-tools">
    <!--<config name="installed_paths" value="vendor/slevomat/coding-standard"/>-->
    <description>The coding standard for Noisivlagel projects.</description>

    <ini name="memory_limit" value="1024M"/>
    <!--Arguments-->

    <arg name="parallel" value="75"/>
    <arg value="wp"/>
    <arg name="colors"/>
    <arg name="report" value="full"/>

    <!--Rulesets-->
    <rule ref="PSR1"/>
    <rule ref="PSR2"/>
    <rule ref="PSR12"/>

    <include-pattern>*\.php$</include-pattern>

    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="200"/>
            <property name="absoluteLineLimit" value="0"/>
        </properties>
    </rule>
    <rule ref="Generic.Functions.FunctionCallArgumentSpacing">
        <exclude-pattern>routes/**/*</exclude-pattern>
    </rule>

    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter"/>

    <rule ref="Generic.PHP.ForbiddenFunctions">
        <message>You fucking bastard don't use %s function !!</message>
        <properties>
            <property name="forbiddenFunctions" type="array">
                <element key="delete" value="unset"/>
                <element key="print" value="echo"/>
                <element key="create_function" value="null"/>
                <element key="var_dump" value="null"/>
                <element key="dump" value="null"/>
                <element key="dd" value="null"/>
            </property>
        </properties>
    </rule>
    <rule ref="Generic.PHP.LowerCaseConstant"/>
    <rule ref="Generic.PHP.NoSilencedErrors">
        <type>error</type>
    </rule>
    <rule ref="Generic.PHP.Syntax"/>
</ruleset>